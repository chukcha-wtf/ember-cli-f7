<!-- Search bar -->
<form data-search-list={{searchList}} data-search-in={{searchIn}} data-custom-search={{customSearch}} data-ignore={{ignore}} data-hide-groups={{hideGroups}} data-hide-dividers={{hideDividers}} class="searchbar searchbar-init">
  <div class="searchbar-input">
    {{input type='search' value=query placeholder=placeholder}}<a href="#" class="searchbar-clear"></a>
  </div><a href="#" class="searchbar-cancel">{{cancelText}}</a>
</form>
